.image-sender {
  padding: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.thumb {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f2f3f5;
}

.img {
  width: 100%;
  height: 100%;
  display: block;
}
