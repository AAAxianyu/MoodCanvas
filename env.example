# MoodCanvas 环境变量配置
# 复制此文件为 .env 并填入实际的API密钥

# 豆包API密钥 (用于图像生成)
ARK_API_KEY=your_doubao_api_key_here

# OpenAI API密钥 (用于文本生成)
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI API密钥 (备用图像生成)
STABILITY_API_KEY=your_stability_api_key_here

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# 模型配置
USE_LOCAL_MODELS=true
DOWNLOAD_TO_PROJECT=true
CACHE_MODELS=true

# 音频处理配置
BATCH_SIZE=1
GRANULARITY=utterance
EXTRACT_EMBEDDING=false

